<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GrammarDetailActivity">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thì hiện tại"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:gravity="center"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Tab buttons -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nội dung"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:gravity="center"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_border" />

        <TextView
            android:id="@+id/tabReview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ôn tập"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_text"
            android:gravity="center"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_border" />

        <TextView
            android:id="@+id/tabPractice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Luyện tập"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/gray_text"
            android:gravity="center"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Content area -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Content section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textViewGrammarContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thì hiện tại đơn (Present Simple) được sử dụng để:\n\n• Diễn tả thói quen, hành động lặp đi lặp lại\n• Diễn tả sự thật hiển nhiên\n• Diễn tả lịch trình, thời gian biểu\n\nCấu trúc:\n• Khẳng định: S + V(s/es) + O\n• Phủ định: S + do/does + not + V + O\n• Nghi vấn: Do/Does + S + V + O?\n\nVí dụ:\n• I go to school every day.\n• She doesn't like coffee.\n• Do you play football?"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:lineSpacingMultiplier="1.5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Review section -->
    <ScrollView
        android:id="@+id/scrollViewReview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ôn tập"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:layout_marginBottom="16dp" />

            <!-- Review cards -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Công thức"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textViewReviewFormulas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Khẳng định: S + V(s/es) + O\n• Phủ định: S + do/does + not + V + O\n• Nghi vấn: Do/Does + S + V + O?"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:lineSpacingMultiplier="1.5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ví dụ"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textViewReviewExamples"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• I go to school every day.\n• She doesn't like coffee.\n• Do you play football?\n• They work in a hospital.\n• He doesn't watch TV."
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:lineSpacingMultiplier="1.5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Practice section -->
    <ScrollView
        android:id="@+id/scrollViewPractice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luyện tập"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:layout_marginBottom="16dp" />

            <!-- Practice question card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textViewPracticeQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn đáp án đúng:\n\nI _____ to school every day."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/buttonPracticeAnswer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="go"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_answer"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:padding="16dp" />

                    <Button
                        android:id="@+id/buttonPracticeAnswer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="goes"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_answer"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:padding="16dp" />

                    <Button
                        android:id="@+id/buttonPracticeAnswer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="going"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_answer"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:padding="16dp" />

                    <Button
                        android:id="@+id/buttonPracticeAnswer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="went"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/bg_answer"
                        android:gravity="center"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/textViewPracticeResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Next question button -->
            <Button
                android:id="@+id/buttonNextQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="Câu hỏi tiếp theo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/purple_primary"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


