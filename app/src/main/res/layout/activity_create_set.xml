<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateSetActivity">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo một học phần mới"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Tạo"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/purple_primary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title input -->
            <EditText
                android:id="@+id/editTextSetTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_form_white"
                android:hint="Tiêu đề"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Description input -->
            <EditText
                android:id="@+id/editTextSetDescription"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_form_white"
                android:hint="Thêm mô tả..."
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <!-- Row actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/buttonImport"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Nhập"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/purple_primary"
                    android:background="@drawable/bg_study_mode"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <Button
                    android:id="@+id/buttonAddDiagram"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Thêm sơ đồ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/purple_primary"
                    android:background="@drawable/bg_study_mode"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </LinearLayout>

            <!-- Term 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextTerm1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_form_white"
                        android:hint="Thuật ngữ"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/editTextDefinition1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_form_white"
                        android:hint="Định nghĩa"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Term 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/editTextTerm2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_form_white"
                        android:hint="Thuật ngữ"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/editTextDefinition2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_form_white"
                        android:hint="Định nghĩa"
                        android:padding="16dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_text"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add more terms -->
            <Button
                android:id="@+id/buttonAddCard"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ Thêm thẻ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:background="@drawable/bg_form_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


