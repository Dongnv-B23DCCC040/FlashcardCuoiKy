<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".TestActivity">

    <!-- Header bar -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Test header with dropdown -->
        <LinearLayout
            android:id="@+id/layoutTestHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_test_mode"
                android:tint="@color/blue_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kiểm tra"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="8dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_chevron_down"
                android:tint="@color/gray_text"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Progress -->
        <TextView
            android:id="@+id/textViewProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0/20 từ vựng tiếng anh"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Print button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPrint"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="In bài kiểm tra"
            android:textSize="12sp"
            android:textColor="@color/blue_button"
            android:backgroundTint="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:elevation="0dp" />

        <ImageView
            android:id="@+id/imageViewSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:tint="@color/gray_text"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/imageViewClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:tint="@color/gray_text"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Main content area with sidebar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toTopOf="@id/bottomControlsBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sidebar -->
        <LinearLayout
            android:id="@+id/sidebar"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="2dp">

            <!-- Hide list button -->
            <LinearLayout
                android:id="@+id/buttonHideList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ẩn danh sách câu hỏi"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_close"
                    android:tint="@color/gray_text" />

            </LinearLayout>

            <!-- Question type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhiều lựa chọn"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:padding="12dp"
                android:paddingTop="8dp" />

            <!-- Question list -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/questionListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp" />

            </ScrollView>

        </LinearLayout>

        <!-- Main content -->
        <ScrollView
            android:id="@+id/mainContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- Current question card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:background="@color/white">

                        <!-- Question number -->
                        <TextView
                            android:id="@+id/textViewQuestionNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1/20"
                            android:textSize="14sp"
                            android:textColor="@color/gray_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Term label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thuật ngữ"
                            android:textSize="14sp"
                            android:textColor="@color/gray_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <!-- Term -->
                        <TextView
                            android:id="@+id/textViewTerm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mix"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@id/textViewQuestionNumber"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="16dp" />

                        <!-- Phonetic -->
                        <TextView
                            android:id="@+id/textViewPhonetic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/mıks/:"
                            android:textSize="18sp"
                            android:textColor="@color/gray_text"
                            app:layout_constraintTop_toBottomOf="@id/textViewTerm"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="8dp" />

                        <!-- Instruction -->
                        <TextView
                            android:id="@+id/textViewInstruction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chọn đáp án đúng"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/textViewPhonetic"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="24dp" />

                        <!-- Answer options -->
                        <LinearLayout
                            android:id="@+id/layoutAnswers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            app:layout_constraintTop_toBottomOf="@id/textViewInstruction"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="16dp">

                            <!-- Left column -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <Button
                                    android:id="@+id/buttonAnswer1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="64dp"
                                    android:text="Vỉ nướng"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_answer"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="start|center_vertical"
                                    android:padding="16dp" />

                                <Button
                                    android:id="@+id/buttonAnswer3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="64dp"
                                    android:text="trộn"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_answer"
                                    android:gravity="start|center_vertical"
                                    android:padding="16dp" />

                            </LinearLayout>

                            <!-- Right column -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <Button
                                    android:id="@+id/buttonAnswer2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="64dp"
                                    android:text="đánh"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_answer"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="start|center_vertical"
                                    android:padding="16dp" />

                                <Button
                                    android:id="@+id/buttonAnswer4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="64dp"
                                    android:text="/'miksə/: Máy trộn"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:background="@drawable/bg_answer"
                                    android:gravity="start|center_vertical"
                                    android:padding="16dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Don't know button -->
                        <TextView
                            android:id="@+id/textViewDontKnow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bạn không biết?"
                            android:textSize="14sp"
                            android:textColor="@color/blue_button"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@id/layoutAnswers"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Next question preview -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:alpha="0.7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Thuật ngữ"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2/20"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pour /po:r/:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Bottom controls bar -->
    <LinearLayout
        android:id="@+id/bottomControlsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Track progress toggle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo dõi tiến độ"
                android:textSize="14sp"
                android:textColor="@color/blue_button"
                android:layout_marginEnd="8dp" />

            <ToggleButton
                android:id="@+id/toggleProgress"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/bg_toggle" />

        </LinearLayout>

        <!-- Navigation buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/buttonPreviousBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_left"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/buttonNextBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="12dp" />

        </LinearLayout>

        <!-- Action icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewPlayBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_play"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/imageViewFullscreenBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_fullscreen"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/imageViewSettingsBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/imageViewLayoutBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_layout"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

