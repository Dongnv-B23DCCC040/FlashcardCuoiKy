<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewFolderActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo thư mục mới"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:gravity="center"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên thư mục"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/purple_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextFolderName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_form_white"
            android:padding="12dp"
            android:hint="Ví dụ: Ngữ pháp, Từ vựng..."
            android:textColor="@color/black"
            android:textColorHint="@color/gray_text"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonCreateFolder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tạo"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/purple_primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

