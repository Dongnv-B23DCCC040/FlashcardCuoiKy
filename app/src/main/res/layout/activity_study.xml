<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StudyActivity">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_bar"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_search"
                android:tint="@color/purple_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tính năng tìm kiếm nay còn nhanh hơn"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewBookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmark"
            android:tint="@color/purple_primary"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/imageViewGroup"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_group"
            android:tint="@color/purple_primary"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/imageViewShare"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
            android:tint="@color/purple_primary"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/imageViewMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:tint="@color/purple_primary"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghệ thuật và nhân văn"
                android:textSize="14sp"
                android:textColor="@color/purple_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="từ vựng tiếng anh"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/purple_primary"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/textViewTermsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32 đang học"
                    android:textSize="14sp"
                    android:textColor="@color/purple_primary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:background="@drawable/wavy_line"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:tint="#FFD700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.7 (63 đánh giá)"
                    android:textSize="14sp"
                    android:textColor="@color/purple_primary"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Study mode buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Top row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/buttonFlashcards"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_study_mode"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_flashcards_mode"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thẻ ghi nhớ"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonLearn"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_study_mode_selected"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_learn_mode"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Học"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonTest"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_study_mode"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_test_mode"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kiểm tra"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Bottom row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/buttonListen"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_study_mode"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_listen"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nghe"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonRead"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_study_mode"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_read"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đọc"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonWrite"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_study_mode"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_write"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viết"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Question card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@color/white">

                    <!-- Question -->
                    <TextView
                        android:id="@+id/textViewQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pour"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textViewPhonetic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/po:r/"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp" />

                    <TextView
                        android:id="@+id/textViewTranslation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="@color/purple_primary"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_marginBottom="24dp" />

                    <!-- Instruction -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chọn đáp án đúng"
                        android:textSize="16sp"
                        android:textColor="@color/purple_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Answer options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Left column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <Button
                                android:id="@+id/buttonAnswer1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="56dp"
                                android:text="1: Toaster"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:background="@drawable/bg_answer"
                                android:layout_marginBottom="12dp"
                                android:gravity="start|center_vertical"
                                android:padding="16dp" />

                            <Button
                                android:id="@+id/buttonAnswer3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="56dp"
                                android:text="3: Oven"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:background="@drawable/bg_answer"
                                android:gravity="start|center_vertical"
                                android:padding="16dp" />

                        </LinearLayout>

                        <!-- Right column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <Button
                                android:id="@+id/buttonAnswer2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="56dp"
                                android:text="2: Dishwasher /'diʃ, wɔ:tə/: Máy rửa bát"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:background="@drawable/bg_answer"
                                android:layout_marginBottom="12dp"
                                android:gravity="start|center_vertical"
                                android:padding="16dp" />

                            <Button
                                android:id="@+id/buttonAnswer4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="56dp"
                                android:text="4: Cabinet"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:background="@drawable/bg_answer"
                                android:gravity="start|center_vertical"
                                android:padding="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Don't know button -->
                    <TextView
                        android:id="@+id/textViewDontKnow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn không biết?"
                        android:textSize="14sp"
                        android:textColor="@color/purple_primary"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom controls bar -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Track progress toggle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo dõi tiến độ"
                android:textSize="14sp"
                android:textColor="@color/blue_button"
                android:layout_marginEnd="8dp" />

            <ToggleButton
                android:id="@+id/toggleProgress"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/bg_toggle" />

        </LinearLayout>

        <!-- Navigation buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/buttonPrevious"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_left"
                android:background="@drawable/bg_circle_gray"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp"
                android:tint="@color/gray_text" />

            <TextView
                android:id="@+id/textViewProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 / 147"
                android:textSize="16sp"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/buttonNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_right"
                android:background="@drawable/bg_circle_gray"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:tint="@color/gray_text" />

        </LinearLayout>

        <!-- Action icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewPlay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_play"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/imageViewFullscreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_fullscreen"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/imageViewSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/imageViewLayout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_layout"
                android:tint="@color/gray_text"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

