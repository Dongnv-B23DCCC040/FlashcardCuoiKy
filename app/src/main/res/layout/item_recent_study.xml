<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRecentStudy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_study_set"
        android:background="@drawable/bg_circle_blue_small"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/textViewSetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="từ vựng tiếng anh"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textViewSetInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 thuật ngữ · Tác giả"
            android:textSize="12sp"
            android:textColor="@color/gray_text"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/gray_text" />

</LinearLayout>

